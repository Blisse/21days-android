<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkgray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!-- Toolbar Title Text Color in Theme.AppCompat -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Toolbar Title Text Color in Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- Action Menu Item Text Color in Theme.AppCompat -->
        <item name="android:actionMenuTextColor">@color/darkgray</item>
        <!-- Menu Overflow Dots Color -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Popup" parent="AppTheme">
        <!-- Action Menu Item Text Color in Theme.AppCompat -->
        <item name="android:actionMenuTextColor">@color/darkgray</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppCardView" parent="CardView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppCardView.HeaderLinearLayout">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/darkgray</item>
    </style>

    <style name="AppCardView.HeaderTextView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="AppCardView.HeaderTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="AppCardView.EditText">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/lightgray</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AppCardView.CalendarDescriptionTextView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="AppCardView.CalendarDescriptionTextAppearance">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">@dimen/calendar_description_text_size</item>
    </style>

    <style name="AppCardView.DashboardStatValueTextAppearance">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">@dimen/stat_text_size</item>
    </style>

</resources>
